@model Category
@{
    ViewData["Title"] = "Create";
}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <form class="forms-sample"  asp-action="create" method="post">
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Category Name">
                                    <span class="text text-danger" asp-validation-for="Name"></span>
                                </div>
                                <button type="submit" class="btn btn-primary text-light me-2">Submit</button>
                                <button class="btn btn-light" asp-action="Index">Go Back</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

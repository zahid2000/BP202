@model List<Category>

@{
    ViewData["Title"] = "Category";
    int count = 1;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="d-flex justify-content-end mb-2">
            <a class="btn btn-success text-light" asp-area="Admin" asp-controller="Category" asp-action="Create">
                <i class="mdi mdi-playlist-plus"></i>
            </a>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            №
                                        </th>
                                        <th>
                                            Category
                                        </th>
                                        <th>
                                            Settings
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Category category in Model)
                                    {
                                        <tr>
                                            <td class="py-1">
                                                @count
                                            </td>
                                            <td>
                                                @category.Name
                                            </td>
                                            <td>
                                                <a class="btn btn-primary btn-sm text-light">
                                                    <i class="mdi mdi-settings"></i>
                                                </a>
                                                <a class="btn btn-warning btn-sm text-light">
                                                    <i class="mdi mdi-border-color"></i>
                                                </a>
                                                <a class="btn btn-danger btn-sm text-light">
                                                    <i class="mdi mdi-delete-variant"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        count++;
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model ServiceVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Product Name">
                                <span class="text text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price"></label>
                                <input asp-for="Price" class="form-control">
                                <span class="text text-danger" asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" placeholder="Description">
                                <span class="text text-danger" asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId"></label>
                                <select class="form-select" asp-for="CategoryId">
                                    @foreach (Category item in Model.Categories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <span class="text text-danger" asp-validation-for="CategoryId"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Images"></label>
                                <input class="form-control" asp-for="Images" accept="image/*" class="form-control">
                                <span class="text text-danger" asp-validation-for="Images"></span>
                            </div>
                            <button type="submit" class="btn btn-primary text-light me-2">Submit</button>
                            <button class="btn btn-light" asp-action="Index">Go Back</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


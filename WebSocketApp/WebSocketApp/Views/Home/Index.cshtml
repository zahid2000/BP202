<div class="container">

    <div class="row  mt-2" id="joinRow">
        <div class="col-6">
            <form class="form-control" id="enterGroupForm">
                <label for="userName" class="form-label">User Name</label>
                <input type="text" class="form-control" id="userName" />
                <select id="group" class="form-select mt-2">
                    <option value="group1">Group1</option>
                    <option value="group2">Group2</option>
                    <option value="group3">Group3</option>
                </select>
                <button class="btn btn-success  mt-2" type="submit">Join group</button>
            </form>
        </div>


    </div>
    <div class="row  mt-2 d-none" id="messageRow">
        <div class="col-12">
            <button class="btn btn-danger" id="leaveBtn">Leave Group</button>
        </div>
        <div class="col-4  mt-2">
            <form class="form-control" id="messageForm">
                <label for="message" class="form-label">Message</label>
                <input type="text" class="form-control" id="message" />
                <button class="btn btn-success mt-2" type="submit">Send message</button>
            </form>
        </div>
        <div class="col-8  mt-2">   
            <ul class="list-group" id="messageList">
              
            </ul>
        </div>

    </div>
</div>
